<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/arkaplan">

    <Button
        android:id="@+id/btn_hesapla"
        android:layout_width="238dp"
        android:layout_height="56dp"
        android:text="Hesapla"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="86dp"
        tools:layout_editor_absoluteY="498dp" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="34dp"
        android:background="@color/white"
        android:text="     Boy      "
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/txt_boy"
        app:layout_constraintStart_toStartOf="@+id/txt_boy"
        app:layout_constraintTop_toBottomOf="@+id/textView17"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="128dp"
        android:layout_height="0dp"
        android:layout_marginBottom="24dp"
        android:background="@color/white"
        android:text="    Kilo    "
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/txt_kilo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_boy"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="327dp"
        android:layout_height="83dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="39dp"
        android:background="@color/white"
        android:text="Lütfen Boşlukları Eksiksiz Doldurunuz"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/textView15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/txt_boy"
        android:layout_width="182dp"
        android:layout_height="0dp"
        android:layout_marginBottom="21dp"
        android:background="@color/white"
        android:ems="10"
        android:hint=" Lütfen boyunuzu girin"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/textView16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView15"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/txt_kilo"
        android:layout_width="185dp"
        android:layout_height="0dp"
        android:layout_marginBottom="30dp"
        android:background="@color/white"
        android:ems="10"
        android:hint=" Lütfen kilonuzu girin"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/btn_hesapla"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView16"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/sonuc"
        android:layout_width="126dp"
        android:layout_height="67dp"
        android:background="@color/white"
        android:textSize="30dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="227dp"
        tools:layout_editor_absoluteY="574dp" />

    <TextView
        android:id="@+id/sonuc2"
        android:layout_width="109dp"
        android:layout_height="64dp"
        android:background="@color/white"
        android:textSize="30dp"
        tools:layout_editor_absoluteX="54dp"
        tools:layout_editor_absoluteY="574dp"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>